<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b1_Ib"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b2_Ib"
        android:layout_toEndOf="@id/b1_Ib"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b3_Ib"
        android:layout_toEndOf="@id/b2_Ib"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b4_Ib"
        android:layout_marginTop="100dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b5_Ib"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@id/b4_Ib"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b6_Ib"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@id/b5_Ib"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b7_Ib"
        android:layout_marginTop="200dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b8_Ib"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@id/b7_Ib"/>

</RelativeLayout>

</RelativeLayout>